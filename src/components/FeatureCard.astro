---
import Reveal from "./Reveal.astro";

interface Props {
    imageSrc: string;
    title: string;
    description: string;
    delayClass?: string;
}

const { imageSrc, title, description, delayClass = "" } = Astro.props as Props;
---

<Reveal class="rounded-xl overflow-hidden bg-white shadow/40 shadow-sm" delayClass={delayClass}>
    <div class="h-48 overflow-hidden">
        <img src={imageSrc} alt={title} class="w-full h-full object-cover" />
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold text-palette-1">{title}</h3>
        <p class="mt-2 text-gray-700">{description}</p>
    </div>
</Reveal>


