---
import Reveal from "./Reveal.astro";

interface Props {
    imageSrc: string;
    title: string;
    subtitle?: string;
    overlayClass?: string; // e.g. "bg-black/50"
}

const { imageSrc, title, subtitle = "", overlayClass = "bg-black/50" } = Astro.props as Props;
---

<section class="relative min-h-[60vh] md:min-h-[70vh] flex items-center justify-center overflow-hidden">
    <img src={imageSrc} alt={title} class="absolute inset-0 w-full h-full object-cover" />
    <div class={`absolute inset-0 ${overlayClass}`}></div>

    <div class="relative z-10 max-w-5xl mx-auto px-6 text-center text-white">
        <Reveal>
            <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">{title}</h1>
        </Reveal>
        {subtitle && (
            <Reveal delayClass="delay-200">
                <p class="mt-6 text-lg md:text-xl text-white/90">{subtitle}</p>
            </Reveal>
        )}
        <div class="mt-8 md:mt-10 flex items-center justify-center gap-4">
            <slot />
        </div>
    </div>
</section>


