---
import Reveal from "./Reveal.astro";

interface MenuItem {
    name: string;
    description?: string;
    price?: string;
}

interface Props {
    title: string;
    items: MenuItem[];
    delayClass?: string;
}

const { title, items, delayClass = "" } = Astro.props as Props;
---

<Reveal delayClass={delayClass}>
    <h3 class="text-2xl font-semibold text-palette-1">{title}</h3>
    <ul class="mt-4 space-y-4">
        {items.map((item) => (
            <li class="flex items-start justify-between gap-6 border-b pb-3">
                <div>
                    <p class="font-medium">{item.name}</p>
                    {item.description && <p class="text-gray-600 text-sm">{item.description}</p>}
                </div>
                {item.price && <span class="text-palette-4 font-semibold">{item.price}</span>}
            </li>
        ))}
    </ul>
</Reveal>


