---
import Reveal from "./Reveal.astro";

interface Props {
    imageSrc: string;
    title: string;
    items: string[];
    priceText: string; // e.g. "fr. 4 800 kr"
    ctaHref?: string;
    ctaText?: string;
    delayClass?: string;
}

const { imageSrc, title, items, priceText, ctaHref = "#", ctaText = "VÃ¤lj paket", delayClass = "" } = Astro.props as Props;
---

<Reveal class="rounded-xl overflow-hidden bg-white shadow/40 shadow-sm" delayClass={delayClass}>
    <div class="h-40 overflow-hidden">
        <img src={imageSrc} alt={title} class="w-full h-full object-cover" />
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold text-palette-1">{title}</h3>
        <ul class="mt-4 space-y-2 text-gray-700">
            {items.map((item) => <li>{item}</li>)}
        </ul>
        <div class="mt-5 flex items-center justify-between">
            <span class="text-palette-4 font-semibold">{priceText}</span>
            <a href={ctaHref} class="text-palette-1 font-semibold hover:underline">{ctaText}</a>
        </div>
    </div>
</Reveal>


